<Window x:Class="ShutdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Таймер выключения" Height="200" Width="300" Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Выберите время (в минутах):" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Slider x:Name="timeSlider" Grid.Row="1" Minimum="1" Maximum="60" TickFrequency="1" ValueChanged="TimeSlider_ValueChanged"/>
        <Label Content="Выбранное время:" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="selectedTimeText" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Применить" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ApplyButton_Click" Margin="10,0,0,0"/>
        <Button Content="Отменить выключение" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CancelShutdownButton_Click" Margin="159,0,0,0"/>
        <TextBlock x:Name="countdownText" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Window>